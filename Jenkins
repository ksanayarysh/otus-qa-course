pipeline {
	agent {
		docker {image "docker-otus"}
	}
	stages {
		stage('Check') {
			steps {
				echo params["address"]
				echo params["browser"]
			}
		}
        	stage('Pytest') {
            		steps {
                		sh "pytest --alluredir=reports Lesson6/selenium/test_login_page.py -q --address=" + params['address'] + " --browser=" + params['browser']
            		}
        	}
	}
	post {
        always {
            archiveArtifacts artifacts: 'Check/reports', fingerprint: true
        }
    }
}
