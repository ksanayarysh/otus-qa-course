pipeline {
	agent {
		docker {image "docker-otus"}
	}
	stages {
        	stage('Build') {
            		steps {
				sh "cd Lesson6"
				sh "cd selenium"
                		sh "pytest -q --address=" + params['address']
            		}
        	}
        	stage('Test') {
            		steps {
                		echo 'Testing..'
            		}
        	}
        	stage('Deploy') {
            		steps {
                		echo 'Deploying....'
            		}
        	}
    	}
}
